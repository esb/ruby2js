---
layout: default
---

{% rendercontent "shared/page_layout" %}
  {% rendercontent "shared/box" %}
    <article class="h-entry">
      <h1 class="mt-3 mb-10 title is-1 is-size-2-mobile has-text-centered has-text-red-dark p-name">{{ page.title }}</h1>

      <article-author class="mb-10 author has-text-centered p-author">
        {% assign author = site.data.authors[page.author] %}
        <img src="{{ author.avatar }}" alt="{{ author.name }}" class="avatar u-photo" />
        <a href="/authors/{{ page.author }}/" class="has-text-weight-bold u-url p-name">{{ author.name }}</a>
        on {{ page.date | date: "%B %-d, %Y" }}
      </article-author>

      <main-content class="content e-content">
        {{ content }}
      </main-content>

      {% if page.previous %}
        <nav class="is-pulled-left mt-8 mb-1">
          <strong class="has-text-grey-dark">Previous</strong><br/>
          <a href="{{ page.previous.relative_url }}" class="mt-2 button is-info is-small">
            <ui-icon class="icon"><sl-icon name="arrow-left-circle-fill"></sl-icon></ui-icon>
            <ui-label>{{ page.previous.title }}</ui-label>
          </a>
        </nav>
      {% endif %}

      {% if page.next %}
        <nav class="is-pulled-right has-text-right mt-8 mb-1">
          <strong class="has-text-grey-dark">Next</strong><br/>
          <a href="{{ page.next.relative_url }}" class="mt-2 button is-info is-small">
            <ui-label>{{ page.next.title }}</ui-label>
            <ui-icon class="icon"><sl-icon name="arrow-right-circle-fill"></sl-icon></ui-icon>
          </a>
        </nav>
      {% endif %}

      <layout-spacer class="is-clearfix"></layout-spacer>
    </article>
  {% endrendercontent %}
{% endrendercontent %}