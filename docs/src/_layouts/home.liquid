---
layout: default
---

{% rendercontent "shared/page_layout" %}
  {% rendercontent "shared/box" %}
    <img-container class="ruby2js-logo">{% svg images/ruby2js-square.svg %}</img-container>

    <h1 class="mt-3 mb-10 title has-text-centered has-text-red-dark">Ruby2JS</h1>

    <main-content class="content">
      {{ content }}
    </main-content>
  {% endrendercontent %}

  <layout-spacer class="my-10 py-2"></layout-spacer>

  <h2 class="title is-2 has-text-centered has-text-red-dark mb-12">News Updates</h2>

  {% for post in collections.posts.resources limit:4 %}
    {% render "content/news_item", post: post, authors: site.data.authors %}
  {% endfor %}

  <nav class="mt-12 has-text-centered">
    <a href="/blog/" class="button is-warning is-small"><ui-label>Previous Updates</ui-label> <ui-icon class="icon"><sl-icon name="arrow-right-circle-fill"></sl-icon></ui-icon></a>
  </nav>
{% endrendercontent %}
